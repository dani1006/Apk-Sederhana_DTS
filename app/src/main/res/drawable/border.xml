<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/white" /> <!-- Set your desired background color -->
            <corners android:radius="8dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
    <item >
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#8F8F8F" /> <!-- Set your desired border color -->
            <corners android:radius="8dp" /> <!-- Match the corner radius from the background item -->
        </shape>
    </item>
</layer-list>
